        android:bottom="-2dp"
        android:left="-2dp"
        android:right="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBackground" />
            <stroke
                android:color="@color/colorPrimary"
                android:width="2dp" />
