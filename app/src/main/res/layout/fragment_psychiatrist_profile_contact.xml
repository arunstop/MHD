<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="240dp"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp">

        <View
            android:layout_width="120dp"
            android:layout_height="6dp"
            android:background="@drawable/bg_round_side"
            android:backgroundTint="@color/colorPrimarySoft" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Hubungi Ahli"
            android:textColor="@color/colorDark"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSaveToContact"
            style="@style/ButtonTransparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_contact_phone_30dp"
            android:drawablePadding="12dp"
            android:gravity="start|center_vertical"
            android:padding="12dp"
            android:text="Tambah ke Kontak"
            android:textSize="12sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnCopyToClipboard"
            style="@style/ButtonTransparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_copy_30dp"
            android:drawablePadding="12dp"
            android:gravity="start|center_vertical"
            android:padding="12dp"
            android:text="Copy Nomor"
            android:textSize="12sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnShare"
            style="@style/ButtonTransparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_share_30dp"
            android:drawablePadding="12dp"
            android:gravity="start|center_vertical"
            android:padding="12dp"
            android:text="Bagikan"
            android:textSize="12sp"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>