<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="390dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/des_round_bottom_gradient"
                    android:orientation="vertical"
                    android:paddingTop="72dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvProfilePic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="12dp"
                        android:background="@color/transparent"
                        app:cardCornerRadius="90dp">

                        <LinearLayout
                            style="@style/ButtonTransparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ivPsyImg"
                                android:layout_width="180dp"
                                android:layout_height="180dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/dummy_femdoc" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvPsyName"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cvProfilePic"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity=""
                        android:layout_marginTop="18dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="3"
                        android:text="J.R.R. Tolkien"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:padding="6dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="8"
                            android:background="@drawable/bg_textline"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Phone"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvPsyNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0827 8291 0981"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>

                        <ImageButton
                            style="@style/ButtonTransparent"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_phone_30dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:padding="6dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="8"
                            android:background="@drawable/bg_textline"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvPsyAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Jl. Bromo No 71, Lowokwaru, Makassar"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>

                        <ImageButton
                            style="@style/ButtonTransparent"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="6dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_gmap" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:padding="6dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="8"
                            android:background="@drawable/bg_textline"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Opening Hours"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvPsyExtra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="08.00 - 16.00"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>

                        <ImageButton
                            style="@style/ButtonTransparent"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="6dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_gmap"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/des_round_corner_bottom"
        android:backgroundTint="@color/colorPrimaryDark"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnBack"
                style="@style/ButtonTransparent"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:drawableStart="@drawable/ic_back_24dp"
                android:onClick="navBack" />

            <TextView
                android:id="@+id/tvPageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/btnBack"
                android:text="Psikiater Profil"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMore"
                style="@style/ButtonTransparent"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:drawableStart="@drawable/ic_more_vert_black_24dp"
                android:gravity="end" />
        </RelativeLayout>


    </Toolbar>


</RelativeLayout>