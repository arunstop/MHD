<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--for rounded top corder bottomsheetdialog-->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/des_round_corner_top</item>
    </style>

    <style name="PopupMenu">
        <item name="android:background">@drawable/bg_round_corner_border</item>
        <item name="android:itemBackground">@drawable/bg_round_corner_border</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--Dialog Animation-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_top_in</item>
        <item name="android:windowExitAnimation">@anim/slide_top_out</item>
    </style>

    <!--//Button Transparent-->
    <style name="ButtonTransparent" parent="Widget.AppCompat.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:background">@drawable/des_ripple</item>
        <item name="android:padding">0dp</item>
        <!--alternative-->
        <!--<item name="android:background">?attr/selectableItemBackground</item>-->
    </style>

    <!--//Button Back-->
    <style name="ButtonBack" parent="Widget.AppCompat.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>

        <!--alternative-->
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <!--/Button-->

    <style name="ButtonRound" parent="Widget.AppCompat.Button">
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/des_round_corner</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ButtonRoundBordered" parent="Widget.AppCompat.Button">
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_round_corner_border</item>
    </style>

    <style name="EditTextBasic" parent="Widget.AppCompat.EditText">
        <item name="android:paddingBottom">12dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>
